<div class="row">
  <div class="col-auto welcome-message">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4 blogpost-form">
  <div class="col-md-6">
    <h3>Create a New Blogpost:</h3>

    <form class="form new-blogpost-form">
      <div class="form-group">
        <label for="blogpost-name">Blogpost name:</label>
        <input class="form-input" type="text" id="blogpost-name" name="blogpost-name" />
      </div>
      <div class="form-group">
        <label for="blogpost-content">Content</label>
        <textarea class="form-input" id="blogpost-content" name="blogpost"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogpost.length}}
  <div class="col-md-6 project-list">
    <h3>Current Blogpost:</h3>

    {{#each blogposts as |blogpost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogpost/{{blogpost.id}}">{{blogpost.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blogpost.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>